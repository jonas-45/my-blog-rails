<main>
  <section id="all_Users">
    <% @all_users.each do |user| %>
      <div class="userInfo">
        <div class="user_photo"><%= image_tag user.photo, class: "profile-image"%></div>
          <div class="badge">
            <h1 class="user-name"><%= link_to user.name, user_path(user.id) %></h1>
            <div class="badge_nums">
              <h3 class="postCount">
                Number of posts: <%= user.posts_counter %>
              </h3>
            </div>
          </div>
        </div>
        <br>
      <br>
    <% end %>
  </section>
</main>